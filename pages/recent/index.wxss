page {
  background-color: #f5f5f5;
}

.container {
  min-height: 100vh;
  padding-bottom: 140rpx; /* 为底部导航栏留出空间 */
}

/* 底部导航栏容器 */
.tab-bar-container {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  background-color: #fff;
  box-shadow: 0 -2rpx 20rpx rgba(0, 0, 0, 0.08);
  padding-bottom: env(safe-area-inset-bottom);
}

/* 自定义底部导航栏 */
.custom-tab-bar {
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 110rpx;
  background-color: #fff;
}

.tab-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  flex: 1;
  height: 100%;
  padding: 10rpx 0;
}

.tab-item .tab-text {
  font-size: 24rpx;
  color: #666;
  margin-top: 6rpx;
  font-weight: 500;
}

.tab-item.active .tab-text {
  color: #0052d9;
  font-weight: 600;
}

/* 分类标签基础样式 */
.category-tag {
  display: inline-block;
  padding: 6rpx 16rpx;
  font-size: 22rpx;
  border-radius: 8rpx;
  font-weight: 500;
}

/* 分类标签不同颜色 */
.tag-finance {
  background-color: #e8f3ff;
  color: #0052d9;
}

.tag-image {
  background-color: #fff0e6;
  color: #ed7b2f;
}

.tag-life {
  background-color: #e8f8f2;
  color: #00a870;
}

.tag-other {
  background-color: #f3f3f3;
  color: #666;
}

/* 顶部标题 */
.header {
  background: linear-gradient(135deg, #0052d9 0%, #366ef4 50%, #4a7cff 100%);
  padding: 60rpx 40rpx 80rpx;
  color: #fff;
  position: relative;
  overflow: hidden;
}

.header-row {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.header-left {
  display: flex;
  align-items: center;
  flex: 1;
  min-width: 0;
}

.header-text {
  flex: 1;
  min-width: 0;
}

.header-title {
  font-size: 48rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.header-subtitle {
  font-size: 28rpx;
  opacity: 0.8;
}

/* 工具列表 */
.tools-list {
  padding: 30rpx;
}

.tool-card {
  display: flex;
  align-items: center;
  padding: 32rpx;
  margin-bottom: 24rpx;
  background-color: #fff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08), 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  transition: all 0.3s;
  position: relative;
}

.tool-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.12), 0 1rpx 4rpx rgba(0, 0, 0, 0.06);
}

/* 收藏标记 */
.favorite-icon {
  position: absolute;
  top: 24rpx;
  right: 24rpx;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10;
  transition: all 0.2s;
}

.favorite-icon:active {
  transform: scale(1.2);
}

.tool-icon {
  width: 100rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #e8f0fe 0%, #d4e4fc 100%);
  border-radius: 20rpx;
  margin-right: 28rpx;
  flex-shrink: 0;
}

.tool-info {
  flex: 1;
  min-width: 0;
}

.tool-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10rpx;
}

.tool-desc {
  font-size: 26rpx;
  color: #888;
  margin-bottom: 14rpx;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.tool-meta {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 8rpx;
}

.tool-category {
  display: inline-block;
}

.tool-time {
  font-size: 24rpx;
  color: #999;
}

.tool-arrow {
  margin-left: 16rpx;
  flex-shrink: 0;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.empty-text {
  margin-top: 24rpx;
  font-size: 28rpx;
  color: #999;
}
