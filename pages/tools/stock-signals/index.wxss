page {
  background-color: #f5f5f5;
}

.container {
  min-height: 100vh;
  padding-bottom: 40rpx;
}

/* 风险提示横幅 */
.risk-warning {
  background: linear-gradient(135deg, #f44336 0%, #ff6f00 100%);
  color: #fff;
  padding: 24rpx 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 8rpx rgba(244, 67, 54, 0.3);
}

.warning-text {
  margin-left: 12rpx;
  font-size: 26rpx;
  font-weight: 500;
  line-height: 1.5;
}

/* 订阅按钮区域 */
.subscribe-section {
  margin: 16rpx;
  background-color: #fff;
  border-radius: 12rpx;
  border: 2rpx solid #d32f2f;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(211, 47, 47, 0.1);
}

.subscribe-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 24rpx;
}

.subscribe-info {
  display: flex;
  align-items: center;
  flex: 1;
  gap: 16rpx;
}

.subscribe-text-wrapper {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
  flex: 1;
}

.subscribe-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1a1a1a;
  line-height: 1.4;
}

.subscribe-desc {
  font-size: 22rpx;
  color: #8c8c8c;
  line-height: 1.4;
}

/* 信号规则说明 */
.rules-section {
  margin: 16rpx;
  background-color: #fff;
  border-radius: 12rpx;
  border: 2rpx solid #d32f2f;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(211, 47, 47, 0.1);
}

.rules-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 24rpx;
  background: linear-gradient(135deg, #ffebee 0%, #ffcdd2 100%);
  cursor: pointer;
  transition: all 0.2s;
}

.rules-header:active {
  background: linear-gradient(135deg, #ffcdd2 0%, #ef9a9a 100%);
}

.rules-header-left {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.rules-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #d32f2f;
}

.rules-content {
  padding: 24rpx;
  animation: slideDown 0.3s ease-out;
}

.rules-section-item {
  margin-bottom: 24rpx;
}

.rules-section-item:last-child {
  margin-bottom: 0;
}

.rules-section-title {
  display: block;
  font-size: 28rpx;
  font-weight: 700;
  color: #d32f2f;
  margin-bottom: 12rpx;
  padding-bottom: 8rpx;
  border-bottom: 2rpx solid #ffcdd2;
}

.rules-text {
  display: block;
  font-size: 24rpx;
  color: #333;
  line-height: 1.8;
  margin-bottom: 8rpx;
  padding-left: 8rpx;
}

/* 筛选工具栏 */
.filter-bar {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  padding: 20rpx 30rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #e0e0e0;
}

.filter-item {
  display: flex;
  align-items: center;
  margin-left: 30rpx;
  padding: 12rpx 20rpx;
  border-radius: 8rpx;
  background-color: #f5f5f5;
}

.filter-text {
  margin-left: 8rpx;
  font-size: 26rpx;
  color: #666;
}

/* 快捷日期筛选栏 */
.date-range-bar {
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #e0e0e0;
  gap: 16rpx;
  transition: all 0.3s ease;
  overflow: hidden;
  max-height: 0;
  opacity: 0;
}

.date-range-bar.show {
  padding: 20rpx 30rpx;
  max-height: 200rpx;
  opacity: 1;
}

.date-range-item {
  padding: 12rpx 24rpx;
  border-radius: 8rpx;
  background-color: #f5f5f5;
  color: #666;
  font-size: 26rpx;
  transition: all 0.3s;
}

.date-range-item.active {
  background-color: #0052d9;
  color: #fff;
}

/* 搜索容器 */
.search-container {
  padding: 0 30rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #e0e0e0;
  transition: all 0.3s ease;
  overflow: hidden;
  max-height: 0;
  opacity: 0;
}

.search-container.show {
  padding: 20rpx 30rpx;
  max-height: 200rpx;
  opacity: 1;
}

/* 筛选面板 */
.filter-panel {
  padding: 40rpx 30rpx;
  background-color: #fff;
  border-radius: 20rpx 20rpx 0 0;
}

.filter-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 30rpx;
}

.filter-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.filter-label {
  font-size: 28rpx;
  color: #666;
}

.filter-value {
  font-size: 28rpx;
  color: #0052d9;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  background-color: #f0f7ff;
}

.filter-actions {
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
  margin-top: 40rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 40rpx;
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #999;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 40rpx;
}

.empty-text {
  margin-top: 30rpx;
  font-size: 32rpx;
  color: #666;
  font-weight: 500;
}

.empty-desc {
  margin-top: 16rpx;
  font-size: 26rpx;
  color: #999;
}

/* 信号列表 */
.signals-list {
  padding: 30rpx;
}

/* 日期分组 */
.date-group {
  margin-bottom: 24rpx;
}

.date-header {
  background: linear-gradient(135deg, #d32f2f 0%, #f44336 100%);
  color: #fff;
  padding: 20rpx 24rpx;
  border-radius: 12rpx 12rpx 0 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 2rpx 8rpx rgba(211, 47, 47, 0.2);
  cursor: pointer;
  transition: all 0.2s;
}

.date-header:active {
  opacity: 0.8;
}

.date-header-left {
  display: flex;
  align-items: center;
  flex: 1;
}

.date-header-right {
  display: flex;
  align-items: center;
}

.date-toggle-text {
  font-size: 26rpx;
  color: #fff;
  font-weight: 500;
  margin-right: 8rpx;
}

.date-title {
  margin-left: 12rpx;
  font-size: 34rpx;
  font-weight: 700;
  color: #fff;
  letter-spacing: 1rpx;
}

.date-count {
  margin-left: 12rpx;
  font-size: 24rpx;
  color: #fff;
  font-weight: 500;
  opacity: 0.95;
}

/* 信号容器 */
.signals-container {
  background-color: #fff;
  border-radius: 0 0 12rpx 12rpx;
  padding: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
  overflow: hidden;
  max-height: 0;
  opacity: 0;
}

.signals-container.show {
  max-height: 10000rpx;
  opacity: 1;
}

/* 股票卡片 */
.stock-card {
  background: linear-gradient(135deg, #ffffff 0%, #fafbfc 100%);
  border: 2rpx solid #d32f2f;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(211, 47, 47, 0.1), 0 1rpx 4rpx rgba(211, 47, 47, 0.05);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.stock-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(90deg, #d32f2f 0%, #f44336 100%);
}

.stock-card:last-child {
  margin-bottom: 0;
}

.stock-card:active {
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 28rpx rgba(211, 47, 47, 0.15), 0 4rpx 12rpx rgba(211, 47, 47, 0.1);
}

/* 卡片头部 */
.card-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 16rpx;
  margin-bottom: 16rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f0f4f8;
}

.stock-info-wrapper {
  display: flex;
  flex-direction: column;
  flex: 1;
  gap: 4rpx;
  cursor: pointer;
  transition: opacity 0.2s;
  background: linear-gradient(135deg, #ffebee 0%, #ffcdd2 100%);
  padding: 12rpx 16rpx;
  border-radius: 8rpx;
  border: 1rpx solid rgba(211, 47, 47, 0.2);
}

.stock-info-wrapper:active {
  opacity: 0.7;
  background: linear-gradient(135deg, #ffcdd2 0%, #ef9a9a 100%);
}

.stock-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #1a1a1a;
  letter-spacing: 0.5rpx;
  line-height: 1.4;
}

.stock-code {
  font-size: 22rpx;
  font-weight: 400;
  color: #8c8c8c;
  letter-spacing: 0.5rpx;
  line-height: 1.2;
}

.stock-summary-card {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 8rpx 16rpx;
  background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);
  border-radius: 12rpx;
  border: 1rpx solid #e9ecef;
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.04);
  flex-shrink: 0;
}

.summary-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 6rpx;
}

.summary-divider {
  width: 1rpx;
  height: 40rpx;
  background: linear-gradient(180deg, transparent 0%, #e0e0e0 50%, transparent 100%);
}

.summary-label {
  font-size: 20rpx;
  color: #8c8c8c;
  font-weight: 400;
}

.summary-value {
  font-size: 24rpx;
  font-weight: 700;
  color: #1a1a1a;
}

.summary-value.success-rate-highlight {
  background: linear-gradient(135deg, #00c853 0%, #00e676 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  font-size: 28rpx;
}

/* 信号列表（股票内部） */
.signals-list-inner {
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid #f0f4f8;
}

.signals-list-title {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 10rpx;
  margin-bottom: 12rpx;
  padding: 12rpx;
  background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);
  border-radius: 8rpx;
  border: 1rpx solid #e9ecef;
  transition: all 0.2s;
}

.signals-list-title:active {
  background: linear-gradient(135deg, #f0f4f8 0%, #e9ecef 100%);
  transform: scale(0.98);
}

.signals-title-left {
  display: flex;
  align-items: center;
  gap: 10rpx;
  flex: 1;
}

.signals-title-text {
  font-size: 24rpx;
  font-weight: 600;
  color: #1a1a1a;
  letter-spacing: 0.5rpx;
}

.signals-toggle-text {
  font-size: 22rpx;
  color: #8c8c8c;
  font-weight: 400;
}

.signals-list-content {
  margin-top: 8rpx;
  animation: slideDown 0.3s ease-out;
}

/* 信号类型统计 */
.signal-type-stats {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-top: 8rpx;
  padding: 12rpx;
  background: linear-gradient(135deg, #fafbfc 0%, #ffffff 100%);
  border-radius: 8rpx;
  border: 1rpx solid #e9ecef;
}

.signal-type-stat-item {
  display: flex;
  align-items: center;
  gap: 4rpx;
  padding: 6rpx 12rpx;
  background-color: #f5f5f5;
  border-radius: 6rpx;
  font-size: 22rpx;
}

.stat-type {
  color: #666;
  font-weight: 500;
}

.stat-count {
  color: #0052d9;
  font-weight: 600;
}

.signal-item {
  padding: 12rpx;
  margin-bottom: 12rpx;
  background: linear-gradient(135deg, #fafbfc 0%, #ffffff 100%);
  border-radius: 12rpx;
  border: 1rpx solid #e9ecef;
  transition: all 0.2s;
}

.signal-item:last-child {
  margin-bottom: 0;
}

.signal-item:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.signal-item-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.signal-type-badge {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.signal-strength-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  box-shadow: 0 0 8rpx currentColor;
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0%, 100% {
    opacity: 1;
    transform: scale(1);
  }
  50% {
    opacity: 0.7;
    transform: scale(1.2);
  }
}

.signal-date {
  font-size: 24rpx;
  color: #8c8c8c;
  font-weight: 400;
  padding: 6rpx 16rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
}

.signal-item-content {
  margin-top: 8rpx;
}

.signal-metrics-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 8rpx;
}

.metric-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 10rpx 8rpx;
  background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
  border-radius: 8rpx;
  border: 1rpx solid #e9ecef;
  transition: all 0.2s;
}

.metric-card:active {
  background: linear-gradient(135deg, #f0f4f8 0%, #e9ecef 100%);
  transform: scale(0.95);
}

.metric-label-small {
  font-size: 20rpx;
  color: #8c8c8c;
  margin-bottom: 4rpx;
  font-weight: 400;
}

.metric-value-large {
  font-size: 26rpx;
  font-weight: 700;
  color: #1a1a1a;
  letter-spacing: 0.5rpx;
}

.metric-value-large.price-value {
  color: #0052d9;
}

/* 详情信号项 */
.detail-signal-item {
  padding: 24rpx;
  margin-bottom: 16rpx;
  background: linear-gradient(135deg, #fafbfc 0%, #ffffff 100%);
  border-radius: 16rpx;
  border: 1rpx solid #e9ecef;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.detail-signal-item:last-child {
  margin-bottom: 0;
}

.detail-signal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid #f0f4f8;
}

.detail-signal-type {
  font-size: 30rpx;
  font-weight: 700;
  color: #1a1a1a;
  letter-spacing: 0.5rpx;
}

.detail-signal-date {
  font-size: 24rpx;
  color: #8c8c8c;
  padding: 6rpx 16rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  font-weight: 400;
}

.detail-signal-content {
  padding-left: 0;
}

.detail-signal-content .detail-section {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 12rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.detail-signal-content .detail-section:last-child {
  border-bottom: none;
}

.detail-signal-content .detail-label {
  font-size: 26rpx;
  color: #8c8c8c;
  font-weight: 400;
}

.detail-signal-content .detail-value {
  font-size: 28rpx;
  color: #1a1a1a;
  font-weight: 600;
}

/* 卡片内容 */
.card-content {
  margin-bottom: 20rpx;
}

.signal-metrics {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.metric-item {
  display: flex;
  align-items: center;
  min-width: 200rpx;
}

.metric-label {
  font-size: 26rpx;
  color: #999;
  margin-right: 8rpx;
}

.metric-value {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.metric-value.success-rate {
  color: #00c853;
  font-weight: 600;
}

/* 信号强度 */
.signal-strength {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.strength-bar {
  flex: 1;
  height: 8rpx;
  background-color: #f0f0f0;
  border-radius: 4rpx;
  overflow: hidden;
}

.strength-fill {
  height: 100%;
  border-radius: 4rpx;
  transition: width 0.3s;
}

.strength-text {
  font-size: 24rpx;
  color: #666;
  min-width: 80rpx;
}

/* 展开按钮 */
.expand-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 12rpx;
  margin-top: 16rpx;
  border-top: 1rpx solid #f0f4f8;
  color: #666;
  background: linear-gradient(135deg, #fafbfc 0%, #ffffff 100%);
  border-radius: 0 0 12rpx 12rpx;
  margin-left: -20rpx;
  margin-right: -20rpx;
  margin-bottom: -20rpx;
  transition: all 0.2s;
}

.expand-btn:active {
  background: linear-gradient(135deg, #f0f4f8 0%, #e9ecef 100%);
}

.expand-text {
  font-size: 28rpx;
  font-weight: 500;
  margin-right: 12rpx;
  color: #0052d9;
}

/* 详情展开区域 */
.card-detail {
  margin-top: 24rpx;
  padding-top: 24rpx;
  border-top: 2rpx solid #f0f4f8;
  animation: slideDown 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

@keyframes slideDown {
  from {
    opacity: 0;
    transform: translateY(-20rpx);
    max-height: 0;
  }
  to {
    opacity: 1;
    transform: translateY(0);
    max-height: 2000rpx;
  }
}

.detail-section {
  margin-bottom: 24rpx;
}

.detail-section:last-child {
  margin-bottom: 0;
}

.detail-title {
  font-size: 26rpx;
  color: #8c8c8c;
  margin-right: 12rpx;
  font-weight: 400;
}

.detail-value {
  font-size: 28rpx;
  color: #1a1a1a;
  font-weight: 600;
}

.metrics-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 12rpx;
  margin-top: 16rpx;
}

.metric-tag {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 12rpx 16rpx;
  border-radius: 12rpx;
  background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);
  border: 1rpx solid #e9ecef;
  font-size: 24rpx;
  transition: all 0.2s;
}

.metric-tag:active {
  background: linear-gradient(135deg, #f0f4f8 0%, #e9ecef 100%);
  transform: scale(0.98);
}

.metric-key {
  color: #8c8c8c;
  margin-right: 12rpx;
  font-weight: 400;
}

.metric-val {
  color: #1a1a1a;
  font-weight: 600;
}

/* 分页控件 */
.pagination {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 30rpx;
  padding: 40rpx 30rpx;
  background-color: #fff;
  border-radius: 12rpx;
  margin-top: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.page-info {
  font-size: 28rpx;
  color: #666;
  min-width: 120rpx;
  text-align: center;
}

/* 其他日期区域 */
.other-dates-section {
  margin-top: 40rpx;
  padding: 0 16rpx;
}

.other-dates-title {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 20rpx;
  padding: 16rpx 0;
  border-bottom: 2rpx solid #d32f2f;
}

.other-dates-title-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #d32f2f;
}

.other-date-item {
  margin-bottom: 24rpx;
  background-color: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(211, 47, 47, 0.1);
}

.other-date-header {
  background: linear-gradient(135deg, #ffebee 0%, #ffcdd2 100%);
  color: #d32f2f;
  padding: 16rpx 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  cursor: pointer;
  transition: all 0.2s;
  border: 1rpx solid rgba(211, 47, 47, 0.2);
}

.other-date-header:active {
  opacity: 0.8;
  background: linear-gradient(135deg, #ffcdd2 0%, #ef9a9a 100%);
}

.other-date-header-left {
  display: flex;
  align-items: center;
  flex: 1;
