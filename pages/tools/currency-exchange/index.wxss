.container {
  min-height: 100vh;
  background-color: #f6f6f6;
  padding: 16rpx;
  padding-bottom: 40rpx;
}

.form-section {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 16rpx;
  margin-bottom: 12rpx;
}

.title {
  font-weight: 500;
  font-size: 30rpx;
  color: #0052d9;
  padding-bottom: 8rpx;
  margin-bottom: 8rpx;
  display: block;
}

.input-group {
  margin-top: 4rpx;
}

.tips {
  text-align: right !important;
}

/* 按钮组间距 */
.group-btn {
  margin-top: 12rpx;
  margin-bottom: 12rpx;
}

.result-section {
  margin-top: 16rpx;
}

/* 顶部蓝色卡片 */
.result-card-blue {
  background: linear-gradient(135deg, #0052d9 0%, #1890ff 100%);
  border-radius: 16rpx;
  padding: 32rpx 28rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 82, 217, 0.2);
}

.result-card-title {
  font-size: 24rpx;
  color: #ffffff;
  text-align: center;
  margin-bottom: 20rpx;
  font-weight: 400;
  opacity: 0.95;
  line-height: 1.5;
}

.result-card-amount {
  font-size: 36rpx;
  font-weight: 700;
  color: #ffffff;
  text-align: center;
  margin-bottom: 28rpx;
  letter-spacing: -1rpx;
  line-height: 1.4;
}

.result-card-sub {
  display: flex;
  justify-content: space-between;
  gap: 16rpx;
}

.result-sub-card {
  flex: 1;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 12rpx;
  padding: 16rpx 12rpx;
  backdrop-filter: blur(10rpx);
}

.result-sub-label {
  font-size: 24rpx;
  color: #ffffff;
  opacity: 0.9;
  margin-bottom: 8rpx;
  text-align: center;
}

.result-sub-value {
  font-size: 28rpx;
  font-weight: 600;
  color: #ffffff;
  text-align: center;
}

/* 底部白色卡片 */
.result-card-white {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.result-card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.result-detail-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333333;
}

.result-detail-sub {
  font-size: 24rpx;
  color: #999999;
  text-align: right;
}

/* 历史点信息（标题右侧） */
.history-info {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.history-rate {
  font-size: 34rpx;
  font-weight: 600;
  color: #0052d9;
  line-height: 1.2;
}

.history-date {
  font-size: 22rpx;
  color: #999999;
  line-height: 1.2;
}

.result-detail-list {
  margin-bottom: 20rpx;
}

.result-detail-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
  min-height: 60rpx;
}

.result-detail-item:last-child {
  border-bottom: none;
}

.result-detail-label {
  font-size: 28rpx;
  color: #666666;
  display: flex;
  align-items: center;
  height: 100%;
}

.result-detail-value {
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
  display: flex;
  align-items: center;
  height: 100%;
}

.result-disclaimer {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.8);
  line-height: 1.5;
  margin-top: 24rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid rgba(255, 255, 255, 0.2);
  text-align: center;
}

/* 快捷日期选择 */
.date-quick-select {
  display: flex;
  gap: 12rpx;
  margin-bottom: 16rpx;
  flex-wrap: wrap;
}

.date-quick-item {
  flex: 1;
  min-width: 120rpx;
  padding: 12rpx 20rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  text-align: center;
  font-size: 26rpx;
  color: #666666;
  transition: all 0.3s;
}

.date-quick-item.active {
  background-color: #0052d9;
  color: #ffffff;
  font-weight: 500;
}

/* 日期选择器 */
.date-picker {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  min-height: 72rpx;
}

.date-label {
  font-size: 30rpx;
  color: #333333;
}

.date-value {
  font-size: 28rpx;
  color: #666666;
}

/* 图表容器 */
.chart-container {
  width: 100%;
  height: 300rpx;
  margin-top: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.exchange-chart {
  width: 100%;
  height: 300rpx;
  display: block;
}

/* 转换金额显示 */
.converted-amount-display {
  margin-top: 20rpx;
  padding: 24rpx;
  background-color: #f5f7fa;
  border-radius: 12rpx;
  border-left: 4rpx solid #0052d9;
}

.converted-amount-display.example-display {
  opacity: 0.7;
  border-left-color: #999999;
}

.converted-amount-label {
  font-size: 26rpx;
  color: #666666;
  margin-bottom: 12rpx;
  text-align: center;
}

.converted-amount-value {
  font-size: 40rpx;
  font-weight: 700;
  color: #0052d9;
  text-align: center;
  line-height: 1.4;
}

.example-display .converted-amount-value {
  color: #999999;
  font-size: 32rpx;
}
