.container {
  min-height: 100vh;
  background-color: #f6f6f6;
  padding: 16rpx;
  padding-bottom: 40rpx;
}

.form-section {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 16rpx;
  margin-bottom: 12rpx;
}

.title {
  font-weight: 500;
  font-size: 30rpx;
  color: #0052d9;
  padding-bottom: 8rpx;
  margin-bottom: 8rpx;
  display: block;
}

.input-group {
  margin-top: 4rpx;
}

/* 减少输入框间距和内部padding */
.input-group .t-input {
  margin-bottom: 0;
  padding: 16rpx 0 !important;
  min-height: 72rpx !important;
  display: flex !important;
  align-items: center !important;
}

.input-group .t-input__label {
  font-size: 30rpx !important;
  line-height: 44rpx !important;
  display: flex !important;
  align-items: center !important;
}

.input-group .t-input__wrap {
  display: flex !important;
  align-items: center !important;
}

.input-group .t-input__wrap .t-input__content {
  line-height: 44rpx !important;
  font-size: 32rpx !important;
  display: flex !important;
  align-items: center !important;
}

.input-group .t-input__tips {
  padding-top: 4rpx !important;
  line-height: 36rpx !important;
  font-size: 24rpx !important;
}

.tips {
  text-align: right !important;
}

/* 按钮组间距 */
.group-btn {
  margin-top: 12rpx;
  margin-bottom: 12rpx;
}

.result-section {
  margin-top: 16rpx;
}

/* 顶部蓝色卡片 */
.result-card-blue {
  background: linear-gradient(135deg, #0052d9 0%, #1890ff 100%);
  border-radius: 16rpx;
  padding: 32rpx 28rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 82, 217, 0.2);
}

.result-card-title {
  font-size: 28rpx;
  color: #ffffff;
  text-align: center;
  margin-bottom: 20rpx;
  font-weight: 400;
}

.result-card-amount {
  font-size: 64rpx;
  font-weight: 700;
  color: #ffffff;
  text-align: center;
  margin-bottom: 28rpx;
  letter-spacing: -1rpx;
}

.result-card-sub {
  display: flex;
  justify-content: space-between;
  gap: 16rpx;
}

.result-sub-card {
  flex: 1;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 12rpx;
  padding: 16rpx 12rpx;
  backdrop-filter: blur(10rpx);
}

.result-sub-label {
  font-size: 24rpx;
  color: #ffffff;
  opacity: 0.9;
  margin-bottom: 8rpx;
  text-align: center;
}

.result-sub-value {
  font-size: 32rpx;
  font-weight: 600;
  color: #ffffff;
  text-align: center;
}

/* 底部白色卡片 */
.result-card-white {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.result-card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.result-detail-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333333;
}

.result-detail-list {
  margin-bottom: 20rpx;
}

.result-detail-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
  min-height: 60rpx;
}

.result-detail-item:last-child {
  border-bottom: none;
}

.result-detail-label {
  font-size: 28rpx;
  color: #666666;
  display: flex;
  align-items: center;
  height: 100%;
}

.result-detail-value {
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
  display: flex;
  align-items: center;
  height: 100%;
}

.result-disclaimer {
  font-size: 22rpx;
  color: #999999;
  line-height: 1.5;
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid #f0f0f0;
}
