page {
  background-color: #f5f5f5;
}

.container {
  min-height: 100vh;
  padding-bottom: 60rpx;
}

/* 内容区域 */
.content-section {
  padding: 30rpx;
}

/* 表单区域 */
.form-section {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 24rpx;
}

.input-hint {
  margin-top: 16rpx;
  font-size: 24rpx;
  color: #999;
}

/* 二维码区域 */
.qrcode-section {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
}

.qrcode-preview {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
}

.qrcode-image {
  width: 400rpx;
  height: 400rpx;
  border: 2rpx solid #eee;
  border-radius: 12rpx;
  background-color: #fff;
}

.qrcode-hint {
  margin-top: 16rpx;
  font-size: 24rpx;
  color: #999;
}

.qrcode-actions {
  margin-top: 30rpx;
}

/* 加载状态 */
.loading-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
  background-color: #fff;
  border-radius: 20rpx;
}

.loading-text {
  margin-top: 24rpx;
  font-size: 28rpx;
  color: #666;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
  background-color: #fff;
  border-radius: 20rpx;
}

.empty-text {
  margin-top: 24rpx;
  font-size: 28rpx;
  color: #999;
}

/* 说明信息 */
.tips-section {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin: 0 30rpx;
}

.tips-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
}

.tips-content {
  color: #666;
}

.tips-item {
  font-size: 26rpx;
  line-height: 2;
}
