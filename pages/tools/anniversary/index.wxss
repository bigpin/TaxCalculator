page {
  background-color: #f5f5f5;
}

.container {
  min-height: 100vh;
  padding-bottom: 120rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 40rpx;
}

.empty-text {
  margin-top: 30rpx;
  font-size: 32rpx;
  color: #666;
  font-weight: 500;
}

.empty-desc {
  margin-top: 16rpx;
  font-size: 26rpx;
  color: #999;
}

/* 纪念日列表 */
.anniversary-list {
  padding: 30rpx;
}

.anniversary-card {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s;
}

.anniversary-card:active {
  transform: scale(0.98);
  box-shadow: 0 1rpx 6rpx rgba(0, 0, 0, 0.1);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.card-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  flex: 1;
}

.card-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.date-info {
  display: flex;
  align-items: center;
  flex: 1;
}

.date-text {
  margin-left: 12rpx;
  font-size: 28rpx;
  color: #666;
}

.days-info {
  padding: 8rpx 20rpx;
  border-radius: 40rpx;
  font-size: 26rpx;
  font-weight: 500;
}

.days-info.future {
  background-color: #e8f0fe;
  color: #0052d9;
}

.days-info.today {
  background-color: #fff4e6;
  color: #ff8800;
}

.days-info.past {
  background-color: #f5f5f5;
  color: #999;
}

.days-text {
  font-size: 28rpx;
}

.card-note {
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid #f0f0f0;
}

.note-text {
  font-size: 26rpx;
  color: #999;
  line-height: 1.5;
}

/* 添加按钮 */
.fab-button {
  position: fixed;
  right: 40rpx;
  bottom: 40rpx;
  width: 112rpx;
  height: 112rpx;
  background: linear-gradient(135deg, #0052d9 0%, #366ef4 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 82, 217, 0.3);
  z-index: 100;
  transition: all 0.3s;
}

.fab-button:active {
  transform: scale(0.9);
}

/* 测试按钮 */
.test-button {
  position: fixed;
  left: 40rpx;
  bottom: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 16rpx 24rpx;
  background-color: #fff;
  border: 2rpx solid #0052d9;
  border-radius: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 82, 217, 0.2);
  z-index: 100;
}

.test-text {
  margin-left: 8rpx;
  font-size: 24rpx;
  color: #0052d9;
  font-weight: 500;
}

.test-button:active {
  transform: scale(0.95);
  background-color: #f0f5ff;
}

/* 操作菜单 */
.action-sheet {
  background-color: #fff;
  border-radius: 24rpx 24rpx 0 0;
  padding: 20rpx 0;
}

.action-item {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 32rpx;
  font-size: 32rpx;
  color: #333;
  border-bottom: 1rpx solid #f0f0f0;
}

.action-item:last-child {
  border-bottom: none;
}

.action-item.danger {
  color: #ff4444;
}

.action-item.cancel {
  color: #999;
  margin-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}
