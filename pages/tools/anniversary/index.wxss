page {
  background-color: #f5f7f8;
}

.container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 顶部标题栏 */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  padding-top: calc(20rpx + env(safe-area-inset-top));
  background-color: #f5f7f8;
}

.header-left {
  display: flex;
  align-items: center;
}

.back-btn {
  margin-right: 8rpx;
}

.back-btn:active {
  opacity: 0.6;
}

.header-title {
  font-size: 38rpx;
  font-weight: 700;
  color: #1a3a47;
  margin-left: 10rpx;
}

/* Tab切换 */
.tab-bar {
  display: flex;
  margin: 0 24rpx 20rpx;
  background-color: #e8eef0;
  border-radius: 16rpx;
  padding: 6rpx;
}

.tab-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 0;
  border-radius: 12rpx;
  transition: all 0.3s;
}

.tab-item text {
  font-size: 28rpx;
  color: #7a9aa8;
  font-weight: 500;
}

.tab-item.active {
  background-color: #fff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.tab-item.active text {
  color: #1a3a47;
  font-weight: 600;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  flex: 1;
  padding: 100rpx 40rpx;
}

.empty-icon {
  width: 160rpx;
  height: 160rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #e8f0f3;
  border-radius: 50%;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #1a3a47;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #7a9aa8;
}

/* 纪念日列表 */
.anniversary-list {
  flex: 1;
  padding: 0 24rpx;
  padding-bottom: 180rpx;
  box-sizing: border-box;
}

.anniversary-card {
  display: flex;
  align-items: center;
  background-color: #fff;
  border-radius: 20rpx;
  padding: 24rpx 20rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
  transition: all 0.3s;
  box-sizing: border-box;
  width: 100%;
}

.anniversary-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

/* 左侧图标 */
.card-icon {
  width: 88rpx;
  height: 88rpx;
  min-width: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 18rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.card-icon.birthday {
  background-color: #ffe5e8;
}

.card-icon.payment {
  background-color: #fff3e0;
}

.card-icon.anniversary {
  background-color: #e8f4f8;
}

.card-icon.holiday {
  background-color: #e8f5e9;
}

.card-icon.custom {
  background-color: #f3e5f5;
}

/* 中间内容 */
.card-content {
  flex: 1;
  min-width: 0;
  overflow: hidden;
}

.card-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1a3a47;
  margin-bottom: 6rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.card-date {
  font-size: 24rpx;
  color: #7a9aa8;
}

/* 进度条 */
.progress-bar {
  margin-top: 16rpx;
  height: 8rpx;
  background-color: #e8eef0;
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #1a5d6a 0%, #2d8a9a 100%);
  border-radius: 4rpx;
  transition: width 0.3s;
}

/* 右侧信息 */
.card-right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  margin-left: 16rpx;
  flex-shrink: 0;
}

.days-badge {
  padding: 8rpx 16rpx;
  border-radius: 10rpx;
  margin-bottom: 6rpx;
  white-space: nowrap;
}

.days-badge text {
  font-size: 22rpx;
  font-weight: 600;
}

.days-badge.urgent {
  background-color: #ff6b35;
}

.days-badge.urgent text {
  color: #fff;
}

.days-badge.soon {
  background-color: #fff3e0;
}

.days-badge.soon text {
  color: #ff8800;
}

.days-badge.normal {
  background-color: #e8f4f8;
}

.days-badge.normal text {
  color: #1a5d6a;
}

.days-badge.today {
  background-color: #e34d59;
}

.days-badge.today text {
  color: #fff;
}

.days-badge.past {
  background-color: #f0f4f5;
}

.days-badge.past text {
  color: #7a9aa8;
}

.card-type {
  font-size: 20rpx;
  color: #b8c9d0;
}

/* 添加按钮 */
.fab-button {
  position: fixed;
  right: 40rpx;
  bottom: 60rpx;
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(135deg, #1a5d6a 0%, #2d8a9a 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(26, 93, 106, 0.4);
  z-index: 100;
  transition: all 0.3s;
}

.fab-button:active {
  transform: scale(0.9);
}

/* 测试按钮 */
.test-button {
  position: fixed;
  left: 40rpx;
  bottom: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 16rpx 24rpx;
  background-color: #fff;
  border: 2rpx solid #1a5d6a;
  border-radius: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(26, 93, 106, 0.2);
  z-index: 100;
}

.test-text {
  margin-left: 8rpx;
  font-size: 24rpx;
  color: #1a5d6a;
  font-weight: 500;
}

.test-button:active {
  transform: scale(0.95);
  background-color: #e8f4f8;
}

/* 操作菜单 */
.action-sheet {
  background-color: #fff;
  border-radius: 32rpx 32rpx 0 0;
  padding: 20rpx 0;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
}

.action-header {
  padding: 30rpx 40rpx;
  border-bottom: 1rpx solid #f0f4f5;
  margin-bottom: 10rpx;
}

.action-title {
  display: block;
  font-size: 34rpx;
  font-weight: 600;
  color: #1a3a47;
  margin-bottom: 8rpx;
}

.action-subtitle {
  font-size: 26rpx;
  color: #7a9aa8;
}

.action-item {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 32rpx;
  font-size: 32rpx;
  color: #1a3a47;
}

.action-item:active {
  background-color: #f5f7f8;
}

.action-item text {
  margin-left: 16rpx;
}

.action-item.danger {
  color: #e34d59;
}

.action-item.cancel {
  color: #7a9aa8;
  margin-top: 10rpx;
  border-top: 8rpx solid #f0f4f5;
}
