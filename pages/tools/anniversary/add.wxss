page {
  background-color: #f5f5f5;
}

.container {
  min-height: 100vh;
  padding-bottom: 60rpx;
}

.form-section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin: 30rpx;
  margin-bottom: 0;
}

.title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.tips {
  text-align: right !important;
  color: #ff4444 !important;
}

/* 提醒设置样式 */
.remind-options {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.remind-option {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  border: 2rpx solid #e0e0e0;
  transition: all 0.2s;
}

.remind-option.active {
  background: #e6f7ff;
  border-color: #1890ff;
}

.remind-checkbox {
  width: 36rpx;
  height: 36rpx;
  border-radius: 6rpx;
  background: #e0e0e0;
  margin-right: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.remind-option.active .remind-checkbox {
  background: #1890ff;
}

.remind-label {
  font-size: 28rpx;
  color: #333;
}

.remind-tip {
  font-size: 24rpx;
  color: #999;
  margin-top: 16rpx;
}

.button-group {
  padding: 30rpx;
  margin-top: 40rpx;
}
