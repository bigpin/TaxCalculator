page {
  background-color: #f5f7f8;
}

.container {
  min-height: 100vh;
  padding-bottom: 40rpx;
}

/* 顶部标题栏 */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 24rpx;
  padding-top: calc(20rpx + env(safe-area-inset-top));
  background-color: #f5f7f8;
}

.header-left {
  display: flex;
  align-items: center;
}

.back-btn {
  margin-right: 8rpx;
}

.back-btn:active {
  opacity: 0.6;
}

.header-title {
  font-size: 38rpx;
  font-weight: 700;
  color: #1a3a47;
}

/* 表单卡片 */
.form-card {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 24rpx;
  margin: 20rpx 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
}

/* 表单项 */
.form-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  min-height: 80rpx;
  padding: 8rpx 0;
}

.form-item.clickable:active {
  opacity: 0.7;
}

.form-label {
  display: flex;
  align-items: center;
  flex-shrink: 0;
}

.form-label text {
  font-size: 30rpx;
  font-weight: 500;
  color: #1a3a47;
  margin-left: 12rpx;
  line-height: 1.2;
}

.form-input {
  flex: 1;
  text-align: right;
  font-size: 28rpx;
  color: #1a3a47;
  line-height: 1.2;
}

.form-input::placeholder {
  color: #b8c9d0;
}

.form-value {
  display: flex;
  align-items: center;
}

.form-value text {
  font-size: 33rpx;
  color: #1a3a47;
  margin-right: 8rpx;
  line-height: 1.2;
  vertical-align: center;
}

.form-value .placeholder {
  color: #b8c9d0;
}

.error-tip {
  font-size: 24rpx;
  color: #e34d59;
  margin-top: 8rpx;
  padding-left: 48rpx;
  line-height: 1.4;
}

/* 分区标题 */
.section-title {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title text {
  font-size: 30rpx;
  font-weight: 500;
  color: #1a3a47;
  margin-left: 12rpx;
}

/* 类型选择网格 */
.type-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
}

.type-item {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx 16rpx;
  background-color: #f5f7f8;
  border-radius: 16rpx;
  border: 3rpx solid transparent;
  transition: all 0.3s;
}

.type-item.active {
  background-color: #e8f4f8;
  border-color: #1a5d6a;
}

.type-icon {
  width: 72rpx;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 16rpx;
  margin-bottom: 12rpx;
}

.type-icon.birthday {
  background-color: #ffe5e8;
}

.type-icon.anniversary {
  background-color: #e8f4f8;
}

.type-icon.payment {
  background-color: #fff3e0;
}

.type-icon.holiday {
  background-color: #e8f5e9;
}

.type-icon.custom {
  background-color: #f3e5f5;
}

.type-name {
  font-size: 24rpx;
  color: #1a3a47;
}

.type-check {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 32rpx;
  height: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #1a5d6a;
  border-radius: 50%;
}

/* 提醒设置网格 */
.remind-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.remind-item {
  display: flex;
  align-items: center;
  padding: 16rpx 20rpx;
  background-color: #f5f7f8;
  border-radius: 12rpx;
  border: 2rpx solid #e8eef0;
  transition: all 0.3s;
}

.remind-item.active {
  background-color: #e8f4f8;
  border-color: #1a5d6a;
}

.remind-checkbox {
  width: 32rpx;
  height: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #e8eef0;
  border-radius: 8rpx;
  margin-right: 12rpx;
  transition: all 0.3s;
}

.remind-item.active .remind-checkbox {
  background-color: #1a5d6a;
}

.remind-item text {
  font-size: 26rpx;
  color: #1a3a47;
}

.remind-tip {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid #f0f4f5;
}

.remind-tip text {
  font-size: 24rpx;
  color: #b8c9d0;
  margin-left: 8rpx;
}

/* 备注输入 */
.note-input {
  width: 100%;
  min-height: 120rpx;
  font-size: 28rpx;
  color: #1a3a47;
  line-height: 1.6;
  box-sizing: border-box;
}

.note-input::placeholder {
  color: #b8c9d0;
}

/* 保存按钮 */
.button-area {
  padding: 40rpx 24rpx;
}

.save-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100rpx;
  background: linear-gradient(135deg, #1a5d6a 0%, #2d8a9a 100%);
  border-radius: 20rpx;
  box-shadow: 0 8rpx 24rpx rgba(26, 93, 106, 0.4);
  transition: all 0.3s;
}

.save-btn text {
  font-size: 32rpx;
  font-weight: 600;
  color: #fff;
  margin-left: 12rpx;
}

.save-btn.disabled {
  opacity: 0.6;
}

.save-btn:active {
  transform: scale(0.98);
  opacity: 0.9;
}
