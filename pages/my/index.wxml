<view class="container">
  <!-- 顶部标题 -->
  <view class="header">
    <view class="header-row">
      <view class="header-left">
        <view class="header-text">
          <view class="header-title">我的收藏</view>
          <view class="header-subtitle">管理您收藏的工具</view>
        </view>
      </view>
    </view>
  </view>

  <!-- 工具列表 -->
  <view class="tools-list">
    <view 
      wx:for="{{favoriteTools}}" 
      wx:key="id"
      class="tool-card"
      data-index="{{index}}"
      bindtap="onToolTap"
    >
      <!-- 收藏标记 -->
      <view class="favorite-icon" catchtap="onFavoriteTap" data-tool-id="{{item.id}}">
        <t-icon name="star-filled" size="40rpx" color="#ffd700" />
      </view>
      <view class="tool-icon">
        <t-icon name="{{item.icon}}" size="48rpx" color="#0052d9" />
      </view>
      <view class="tool-info">
        <view class="tool-name">{{item.name}}</view>
        <view class="tool-desc">{{item.description}}</view>
        <view class="tool-category">
          <view class="category-tag tag-{{item.category}}">{{categoryNames[item.category]}}</view>
        </view>
      </view>
      <view class="tool-arrow">
        <t-icon name="chevron-right" size="40rpx" color="#bbb" />
      </view>
    </view>
  </view>

  <!-- 空状态 -->
  <view wx:if="{{favoriteTools.length === 0}}" class="empty-state">
    <t-icon name="star" size="120rpx" color="#ccc" />
    <text class="empty-text">暂无收藏的工具</text>
    <text class="empty-hint">点击工具卡片右上角的五角星即可收藏</text>
  </view>

  <!-- 底部导航栏 -->
  <view class="tab-bar-container">
    <view class="custom-tab-bar">
      <view class="tab-item" data-tab="tools" bindtap="onTabItemTap">
        <t-icon name="app" size="48rpx" color="#666" />
        <text class="tab-text">工具箱</text>
      </view>
      <view class="tab-item" data-tab="recent" bindtap="onTabItemTap">
        <t-icon name="time" size="48rpx" color="#666" />
        <text class="tab-text">最近使用</text>
      </view>
      <view class="tab-item active" data-tab="my" bindtap="onTabItemTap">
        <t-icon name="user" size="48rpx" color="#0052d9" />
        <text class="tab-text">我的</text>
      </view>
    </view>
  </view>
</view>
