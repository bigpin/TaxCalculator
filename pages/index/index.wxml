<view class="container">
  <!-- 顶部标题 -->
  <view class="header">
    <view class="header-row">
      <view class="header-left">
        <image class="app-icon" src="/assets/TDesignLogo@2x.png" mode="aspectFit" />
        <view class="header-text">
          <view class="header-title">Max的工具宝藏</view>
          <view class="header-subtitle">便捷工具，触手可及</view>
        </view>
      </view>
      <view class="header-actions">
        <button class="header-icon-btn" open-type="share">
          <t-icon name="share" size="48rpx" color="#fff" />
        </button>
        <view class="header-icon-btn" bindtap="toggleSearch">
          <t-icon name="search" size="48rpx" color="#fff" />
        </view>
      </view>
    </view>
    <!-- 搜索框 -->
    <view class="search-box {{showSearch ? 'show' : ''}}">
      <t-search
        placeholder="搜索工具..."
        value="{{searchValue}}"
        bind:change="onSearchChange"
        bind:clear="onSearchClear"
        shape="round"
      />
    </view>
  </view>

  <!-- 分类筛选 -->
  <view class="category-filter">
    <view 
      class="category-item {{currentCategory === '' ? 'active' : ''}}"
      data-category=""
      bindtap="onCategoryChange"
    >
      全部
    </view>
    <view 
      wx:for="{{categories}}" 
      wx:key="*this"
      class="category-item {{currentCategory === item ? 'active' : ''}}"
      data-category="{{item}}"
      bindtap="onCategoryChange"
    >
      {{categoryNames[item]}}
    </view>
  </view>

  <!-- 工具列表 -->
  <view class="tools-list">
    <view 
      wx:for="{{filteredTools}}" 
      wx:key="id"
      class="tool-card"
      data-index="{{index}}"
      bindtap="onToolTap"
    >
      <view class="tool-icon">
        <t-icon name="{{item.icon}}" size="48rpx" color="#0052d9" />
      </view>
      <view class="tool-info">
        <view class="tool-name">{{item.name}}</view>
        <view class="tool-desc">{{item.description}}</view>
        <view class="tool-category">
          <t-tag theme="primary" variant="light" size="small">{{categoryNames[item.category]}}</t-tag>
        </view>
      </view>
      <view class="tool-arrow">
        <t-icon name="chevron-right" size="40rpx" color="#bbb" />
      </view>
    </view>
  </view>

  <!-- 空状态 -->
  <view wx:if="{{filteredTools.length === 0}}" class="empty-state">
    <t-icon name="inbox" size="120rpx" color="#ccc" />
    <text class="empty-text">暂无工具</text>
  </view>

  <!-- 底部版权 -->
  <view class="footer">
    <text>Max的工具宝藏 v1.0</text>
  </view>
</view>
