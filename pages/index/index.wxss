page {
  background-color: #f5f5f5;
}

.container {
  min-height: 100vh;
  padding-bottom: 180rpx; /* 为底部导航栏留出空间 */
}

/* 顶部标题 */
.header {
  background: linear-gradient(135deg, #0052d9 0%, #366ef4 50%, #4a7cff 100%);
  padding: 30rpx 30rpx 40rpx;
  color: #fff;
  position: relative;
  overflow: hidden;
}

.header::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: radial-gradient(circle at 20% 50%, rgba(255, 255, 255, 0.1) 0%, transparent 50%);
  pointer-events: none;
}

.header-row {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.header-left {
  display: flex;
  align-items: center;
  flex: 1;
  min-width: 0;
}

.app-icon {
  width: 56rpx;
  height: 56rpx;
  border-radius: 14rpx;
  background: rgba(255, 255, 255, 0.18);
  padding: 8rpx;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.header-text {
  flex: 1;
  min-width: 0;
}

.header-title {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 6rpx;
}

.header-subtitle {
  font-size: 24rpx;
  opacity: 0.8;
}

.header-actions {
  display: flex;
  gap: 12rpx;
  margin-top: 0;
}

.header-icon-btn {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  transition: all 0.3s;
  padding: 0;
  border: none;
  line-height: 1;
}

.header-icon-btn::after {
  border: none;
}

.header-icon-btn:active {
  background: rgba(255, 255, 255, 0.35);
  transform: scale(0.95);
}

/* 搜索框 */
.search-box {
  max-height: 0;
  overflow: hidden;
  transition: all 0.3s ease-in-out;
  opacity: 0;
  margin-top: 0;
}

.search-box.show {
  max-height: 120rpx;
  opacity: 1;
  margin-top: 30rpx;
}

/* 分类筛选 */
.category-filter {
  display: flex;
  padding: 24rpx 30rpx;
  background-color: #fff;
  margin-top: 20rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  overflow-x: auto;
  white-space: nowrap;
  position: relative;
  z-index: 10;
}

.category-item {
  display: inline-block;
  padding: 16rpx 32rpx;
  margin-right: 16rpx;
  font-size: 28rpx;
  color: #666;
  border-radius: 40rpx;
  background-color: #f5f5f5;
  transition: all 0.3s;
  flex-shrink: 0;
}

.category-item:last-child {
  margin-right: 0;
}

/* 不同分类的高亮颜色 */
.category-item.active-all {
  color: #fff;
  background-color: #0052d9;
  font-weight: 500;
}

.category-item.active-finance {
  color: #fff;
  background-color: #e53e3e;
  font-weight: 500;
}

.category-item.active-image {
  color: #fff;
  background-color: #ed7b2f;
  font-weight: 500;
}

.category-item.active-life {
  color: #fff;
  background-color: #00a870;
  font-weight: 500;
}

.category-item.active-other {
  color: #fff;
  background-color: #666;
  font-weight: 500;
}

/* 工具列表 */
.tools-list {
  padding: 30rpx;
}

.tool-card {
  display: flex;
  align-items: center;
  padding: 32rpx;
  margin-bottom: 24rpx;
  background-color: #fff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08), 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  transition: all 0.3s;
  position: relative;
}

.tool-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.12), 0 1rpx 4rpx rgba(0, 0, 0, 0.06);
}

/* 收藏标记 */
.favorite-icon {
  position: absolute;
  top: 24rpx;
  right: 24rpx;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10;
  transition: all 0.2s;
}

.favorite-icon:active {
  transform: scale(1.2);
}

.tool-icon {
  width: 100rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #e8f0fe 0%, #d4e4fc 100%);
  border-radius: 20rpx;
  margin-right: 28rpx;
  flex-shrink: 0;
}

/* 不同分类的图标背景色 */
.tool-icon.icon-finance {
  background: linear-gradient(135deg, #ffe8e8 0%, #ffd4d4 100%);
}

.tool-icon.icon-image {
  background: linear-gradient(135deg, #fff0e6 0%, #ffe0cc 100%);
}

.tool-icon.icon-life {
  background: linear-gradient(135deg, #e8f8f2 0%, #d0f0e0 100%);
}

.tool-icon.icon-other {
  background: linear-gradient(135deg, #f3f3f3 0%, #e8e8e8 100%);
}

.tool-info {
  flex: 1;
  min-width: 0;
}

.tool-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10rpx;
}

.tool-desc {
  font-size: 26rpx;
  color: #888;
  margin-bottom: 14rpx;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.tool-category {
  display: inline-block;
}

.tool-meta {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 8rpx;
}

.tool-time {
  font-size: 24rpx;
  color: #999;
}

.tool-arrow {
  margin-left: 16rpx;
  flex-shrink: 0;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.empty-text {
  margin-top: 24rpx;
  font-size: 28rpx;
  color: #999;
}

/* 底部导航栏容器 */
.tab-bar-container {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  background-color: #fff;
  box-shadow: 0 -2rpx 20rpx rgba(0, 0, 0, 0.08);
  padding-bottom: env(safe-area-inset-bottom);
}

/* 自定义底部导航栏 */
.custom-tab-bar {
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 110rpx;
  background-color: #fff;
}

.tab-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  flex: 1;
  height: 100%;
  padding: 10rpx 0;
}

.tab-item .tab-text {
  font-size: 24rpx;
  color: #666;
  margin-top: 6rpx;
  font-weight: 500;
}

.tab-item.active .tab-text {
  font-weight: 600;
}

/* 分类标签基础样式 */
.category-tag {
  display: inline-block;
  padding: 6rpx 16rpx;
  font-size: 22rpx;
  border-radius: 8rpx;
  font-weight: 500;
}

/* 分类标签不同颜色 */
.tag-finance {
  background-color: #ffe8e8;
  color: #e53e3e;
}

.tag-image {
  background-color: #fff0e6;
  color: #ed7b2f;
}

.tag-life {
  background-color: #e8f8f2;
  color: #00a870;
}

.tag-other {
  background-color: #f3f3f3;
  color: #666;
}

/* 底部版权 */
.footer {
  text-align: center;
  padding: 40rpx;
  color: #bbb;
  font-size: 24rpx;
}
