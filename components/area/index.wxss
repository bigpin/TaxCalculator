.mb-16 {
  margin-bottom: 0;
}

.area-container {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.area-container .t-cell {
  flex: 1;
}

.exchange-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 16rpx 24rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  min-width: 100rpx;
}

.exchange-icon {
  font-size: 32rpx;
  color: #0052d9;
  font-weight: 600;
  line-height: 1;
  margin-bottom: 4rpx;
}

.exchange-text {
  font-size: 22rpx;
  color: #666666;
}
